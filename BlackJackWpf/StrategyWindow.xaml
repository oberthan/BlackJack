<Window x:Class="BlackjackWpf.StrategyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackjackWpf"
        mc:Ignorable="d"
        Title="StrategyWindow" Height="450" Width="800">

    <StackPanel Margin="20">
        <TabControl>
            <TabItem Header="Pairs">
                <DataGrid x:Name="PairGrid" 
                          ItemsSource="{Binding PairStrategy}" 
                          AutoGenerateColumns="True" 
                          AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"/>
            </TabItem>

            <TabItem Header="Soft Totals">
                <DataGrid x:Name="SoftGrid" 
                          ItemsSource="{Binding SoftStrategy}" 
                          AutoGenerateColumns="True" 
                          AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"/>
            </TabItem>

            <TabItem Header="Hard Totals">
                <DataGrid x:Name="HardGrid" 
                          ItemsSource="{Binding HardStrategy}" 
                          AutoGenerateColumns="True" 
                          AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"/>
            </TabItem>
        </TabControl>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button Margin="3" IsDefault="True" Click="Button_Click">Ok</Button>
            <Button Margin="3" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>