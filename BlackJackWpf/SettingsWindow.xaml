<Window x:Class="BlackJackWpf.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800" x:Name="Self">
    <Grid DataContext="{Binding ElementName=Self, Path=ViewModel}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>


        <TextBlock Text="Penetration:" Grid.Row="1" Grid.Column="0" Margin="0,0,0,5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Penetration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Width="100" Margin="0,0,0,10"/>

        <TextBlock Text="Number of simulations:" Grid.Row="2" Grid.Column="0" Margin="0,0,0,5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Rounds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Width="100" Margin="0,0,0,10"/>

        <CheckBox Content="Dealer Stands On Soft 17"
                  IsChecked="{Binding DealerStandsOnSoft17, Mode=TwoWay}" Grid.Row="3" Grid.Column="0" Margin="0,0,0,10"/>

        <TextBlock Text="Blackjack Payout:" Grid.Row="4" Grid.Column="0" Margin="0,0,0,5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding BlackjackPayout, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" Width="100" Margin="0,0,0,10"/>

        <CheckBox Content="Allow Split"
                  IsChecked="{Binding AllowSplit, Mode=TwoWay}" Grid.Row="5" Grid.Column="0" Margin="0,0,0,10"/>
        <CheckBox Content="Allow Resplit"
                  IsChecked="{Binding AllowResplit, Mode=TwoWay}" Grid.Row="6" Grid.Column="0" Margin="0,0,0,10"/>
        <CheckBox Content="Allow Double"
                  IsChecked="{Binding AllowDouble, Mode=TwoWay}" Grid.Row="7" Grid.Column="0" Margin="0,0,0,10"/>
        <CheckBox Content="Double On Any Two"
                  IsChecked="{Binding DoubleOnAnyTwo, Mode=TwoWay}" Grid.Row="8" Grid.Column="0" Margin="0,0,0,10"/>
        <CheckBox Content="Double After Split"
                  IsChecked="{Binding DoubleAfterSplit, Mode=TwoWay}" Grid.Row="9" Grid.Column="0" Margin="0,0,0,10"/>
        <CheckBox Content="Double After Split 11"
                  IsChecked="{Binding DoubleAfterSplit11, Mode=TwoWay}" Grid.Row="10" Grid.Column="0" Margin="0,0,0,10"/>
        <CheckBox Content="Double After Split Aces"
                  IsChecked="{Binding DoubleAfterSplitAces, Mode=TwoWay}" Grid.Row="11" Grid.Column="0" Margin="0,0,0,10"/>

        <TextBlock Text="Six Card Charlie Count:" Grid.Row="12" Grid.Column="0" Margin="0,0,0,5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding SixCardCharlieCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="12" Grid.Column="1" Width="100" Margin="0,0,0,10"/>
        
        <TextBlock Text="Cashback Limits:" Grid.Row="13" Grid.Column="0" Margin="0,0,0,5" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Grid.Row="13" Grid.Column="1">
            <TextBlock Text="Upper:"></TextBlock>
            <TextBox Text="{Binding UpperCashback, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" Margin="0,0,0,10"/>
            <TextBlock Text="Lower:"></TextBlock>
            <TextBox Text="{Binding LowerCashback, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" Margin="0,0,-30,10"/>
        </StackPanel>

        <CheckBox Content="Dealer Peeks On Ace"
                  IsChecked="{Binding DealerPeeksOnAce, Mode=TwoWay}" Grid.Row="14" Grid.Column="0" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left">
            <Button Margin="3" IsDefault="True" Click="Button_Click">Ok</Button>
            <Button Margin="3" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
